<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddProductFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.crudUI.AddItemActivity">

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="17dp"
                android:layout_height="25dp"
                android:layout_marginStart="7dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                app:layout_constraintBottom_toBottomOf="@+id/btn_qradd"
                app:layout_constraintStart_toEndOf="@+id/btn_qradd"
                app:layout_constraintTop_toTopOf="@+id/btn_qradd" />

            <TextView
                android:id="@+id/add_item"
                style="@style/textStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"

                android:textSize="18dp"
                android:background="@drawable/gray_rounded_filled20"
                android:gravity="center"
                android:padding="8dp"
                android:text="اضافه منتج جديد "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btn_qradd"
                android:layout_width="70dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/blue_rounded_filled20"
                android:src="@drawable/ic_qr"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/customer_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="80dp"
                android:padding="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:layout_constraintTop_toBottomOf="@+id/add_item"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp">


                    <EditText
                        android:id="@+id/textView2"
                        android:layout_width="200dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="40dp"

                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="32dp"
                        android:background="@drawable/blue_border"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        app:layout_constraintEnd_toStartOf="@+id/textView4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />

                    <EditText
                        android:id="@+id/textView3"
                        android:layout_width="200dp"

                        android:layout_height="44dp"
                        android:layout_marginStart="40dp"
                        android:inputType="numberDecimal"

                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="32dp"
                        android:background="@drawable/blue_border"
                        android:foregroundGravity="center"

                        android:gravity="center"
                        app:layout_constraintEnd_toStartOf="@+id/textView6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView8" />

                    <EditText
                        android:id="@+id/textView8"
                        android:layout_width="200dp"

                        android:layout_height="44dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="32dp"
                        android:background="@drawable/blue_border"
                        android:foregroundGravity="center"

                        android:gravity="center"
                        app:layout_constraintEnd_toStartOf="@+id/textView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView4"
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="44dp"

                        android:layout_marginEnd="32dp"

                        android:text="سعر الحاللى:"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView6" />

                    <TextView
                        android:id="@+id/textView6"
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="32dp"
                        android:text="كود المنتج  :"
                        app:layout_constraintBottom_toTopOf="@+id/textView4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                    <TextView
                        android:id="@+id/textView"
                        style="@style/textStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="26dp"
                        android:layout_marginEnd="32dp"

                        android:text="اسم المنتج :"
                        app:layout_constraintBottom_toTopOf="@+id/textView6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/Add"
                android:layout_width="197dp"
                android:layout_height="64dp"
                android:layout_marginTop="90dp"
                android:text="اضافه منتج جديد"
                android:background="@color/colorapps"
                app:backgroundTint="@null"
                android:textColor="#ffff"
                android:padding="16dp"
                android:layout_margin="62dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customer_card" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>